{
  "name": "@simple-coffeeshop/db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "generate": "prisma generate",

    "push": "prisma db push",
    "studio": "prisma studio",
    "bootstrap": "tsx scripts/bootstrap-root.ts",

    "push:test": "NODE_ENV=test prisma db push",
    "studio:test": "NODE_ENV=test prisma studio",

    "push:prod": "NODE_ENV=production prisma db push",
    "bootstrap:prod": "NODE_ENV=production tsx scripts/bootstrap-root.ts",

    "test": "vitest run --passWithNoTests",
    "lint": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "prisma": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
