# === PRODUCTION DATABASE ===
POSTGRES_USER=admin_prod
POSTGRES_PASSWORD=your_super_strong_password_here
POSTGRES_DB=simple_coffeeshop_prod

# [EVA_PROTIP]: Хост 'db-prod' соответствует имени сервиса в docker-compose.prod.yml
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db-prod:5432/${POSTGRES_DB}?schema=public"

# === INITIAL ADMIN (BOOTSTRAP) ===
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="change-me-immediately"

# === AUTHENTICATION ===
# Сгенерируй длинную случайную строку!
JWT_SECRET="random_long_secret_here"
# Внешний URL (через Nginx)
APP_URL="https://erp.yourdomain.com"

# === SYSTEM ===
# Критично для активации логики загрузки .env.prod
NODE_ENV="production"

# === MAIL (SMTP) ===
SMTP_HOST="smtp.provider.com"
SMTP_PORT=587
SMTP_USER="prod_user"
SMTP_PASS="prod_pass"
EMAIL_FROM="no-reply@yourdomain.com"

# [EVA_FIX]: Оставляем только нужные базы для продакшн-инстанса
POSTGRES_MULTIPLE_DATABASES=${POSTGRES_DB}
