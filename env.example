# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=simple_coffeeshop
POSTGRES_DB_DEV=simple_coffeeshop_dev
POSTGRES_DB_TEST=simple_coffeeshop_test

# Составной URL для Prisma
# [EVA_PROTIP]: Используйте localhost для локального запуска и 'db' для Docker.
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"

# URL для тестов (Vitest)
# [EVA_PROTIP]: Эта база будет полностью очищаться при каждом запуске тестового раунда.
TEST_DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB_TEST}?schema=public"

# [EVA_FIX]: Используем интерполяцию для формирования списка.
# Теперь, если ты изменишь название базы выше, список обновится автоматически.
POSTGRES_MULTIPLE_DATABASES=${POSTGRES_DB_DEV},${POSTGRES_DB_TEST}

# ==============================================================================
# INITIAL ROOT USER (Bootstrap)
# ==============================================================================
# Эти данные используются скриптом pnpm db:bootstrap для создания первого админа.
# Обязательно измените их перед развертыванием в продакшн!
ADMIN_EMAIL="admin@aurora.com"
ADMIN_PASSWORD="ultra-secure-password-here"

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# Секрет для JWT (jsonwebtoken)
JWT_SECRET="your_ultra_secret_string_here"
# URL фронтенда (Vite)
APP_URL="http://localhost:3000"

# ==============================================================================
# MAIL SERVICE (SMTP)
# ==============================================================================
# Необходимо для отправки Magic Links (подтверждение входа)
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=587
SMTP_USER="user"
SMTP_PASS="pass"
EMAIL_FROM="noreply@simple-coffeeshop.com"

# ==============================================================================
# SYSTEM & PERFORMANCE
# ==============================================================================
# development | production | test
NODE_ENV="development"
