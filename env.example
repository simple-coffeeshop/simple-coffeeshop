# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=simple_coffeeshop
POSTGRES_DB_DEV=simple_coffeeshop_dev
POSTGRES_DB_TEST=simple_coffeeshop_test
# Составной URL для Prisma
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"

# URL для тестов (Vitest)
# [EVAS_PROTIP]: Эта база будет очищаться при каждом запуске тестового раунда.
TEST_DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB_TEST}?schema=public"

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# Секрет для JWT (jsonwebtoken)
JWT_SECRET="your_ultra_secret_string_here"
# URL фронтенда (Vite)
APP_URL="http://localhost:3000"

# MAIL SERVICE (SMTP)
# ==============================================================================
# Необходимо для отправки Magic Links
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=587
SMTP_USER="user"
SMTP_PASS="pass"
EMAIL_FROM="noreply@simple-coffeeshop.com"

# ==============================================================================
# SYSTEM & PERFORMANCE
# ==============================================================================
NODE_ENV="development"

# ==============================================================================
# INITIAL ROOT USER (Bootstrap)
# ==============================================================================
# Эти данные используются скриптом pnpm db:bootstrap для создания первого админа
ADMIN_EMAIL="admin@aurora.com"
ADMIN_PASSWORD="ultra-secure-password-here"
