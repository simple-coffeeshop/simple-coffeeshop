{
  "name": "simple-coffeeshop",
  "version": "1.0.0",
  "description": "Coffee ERP & Operations Monitor",
  "author": "stupid-user",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "db": "pnpm --filter @simple-coffeeshop/db",
    "api": "pnpm --filter @simple-coffeeshop/api",
    "web": "pnpm --filter @simple-coffeeshop/web",
    "ui": "pnpm --filter @simple-coffeeshop/ui",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "db:generate": "pnpm --filter @simple-coffeeshop/db generate",
    "db:push": "pnpm --filter @simple-coffeeshop/db push",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "type-check": "tsc --build",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint && pnpm type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "^25.0.3",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  }
}
