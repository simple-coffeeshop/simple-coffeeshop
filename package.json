{
  "name": "simple-coffeeshop",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "db": "pnpm --filter @simple-coffeeshop/db",
    "api": "pnpm --filter @simple-coffeeshop/api",
    "web": "pnpm --filter @simple-coffeeshop/web",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "db:generate": "pnpm --filter @simple-coffeeshop/db generate",
    "db:push": "pnpm --filter @simple-coffeeshop/db push",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  }
}
