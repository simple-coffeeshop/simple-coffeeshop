{
	"name": "coffee-erp-ops",
	"version": "1.0.0",
	"private": true,
	"packageManager": "pnpm@10.25.0",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dev": "pnpm -r --parallel dev",
		"build": "pnpm -r build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"db:generate": "pnpm --filter @coffee/db generate",
		"db:push": "pnpm --filter @coffee/db push"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"turbo": "^2.7.2",
		"typescript": "^5.9.3"
	}
}
